docker_ip() {
    # prints out the IPAddress of the container with name $1, requires 1 positional argument
    docker inspect $1 | jq '.[0].NetworkSettings.Networks' | grep 'IPAddress' 
}


download_es_doc() {
    # downloads a document from prod-Elasticsearch into a JSON-file based on it's ID
    ID=$1
    if [[ -z $ID ]]; then
        echo "You need to set a ID! e.g. download_es_doc 42d1a1c7a2526959bf79c2439ef186a2e4753f1a203b1b7efa3b8f8b6b39e32f"
        return 1
    fi
    http -a $ELASTICSEARCH_PROD_AUTH "https://es.aitastic.com/newsstand/_search?q=_id:$ID" | jq > $ID.json
}

download_es_doc_dev() {
    # downloads a document from test-Elasticsearch into a JSON-file based on it's ID
    ID=$1
    if [[ -z $ID ]]; then
        echo "You need to set a ID! e.g. download_es_doc_dev 42d1a1c7a2526959bf79c2439ef186a2e4753f1a203b1b7efa3b8f8b6b39e32f"
        return 1
    fi
    http -a $ELASTICSEARCH_DEV_AUTH "https://es.dev.aitastic.com/newsstand/_search?q=_id:$ID" | jq > $ID.json
}

colorize_stderr() {
    # colorizes stderr-output of the following command in RED
    # e.g. colorize_stderr $command
    local RED="\033[0;31m"
    local NO_COLOR="\033[0m" # Keine Farbe

    "$@" 2> >(while read -r line; do
        # Färben Sie stderr rot
        echo -e "${RED}${line}${NO_COLOR}"
    done)
}

tds() {
    local date="$1"
    if [[ -z "$date" ]]; then
        echo "Date required as parameter. E.g. `tds 2025-04-01`"
        return 1
    fi
    local start="${date}T00:00:00"
    local end="$(date -d "$date + 1 day" +%Y-%m-%d)T00:00:00"
    timew summary $start - $end
}

merge_pdf() {
    # collects all files with the given prefix, merges them with
    # ghostscript and writes them out to $prefix.pdf
    local prefix="$1"
    if [[ -z $prefix ]]; then
      echo "Usage: merge_pdf <prefix>"
      return 1
    fi
    
    local -a files=( "${prefix}"_[0-9][0-9][0-9][0-9].pdf )
    if (( ${#files[@]} == 0 )); then
      echo "Didn't find files matching »${prefix}_[0-9][0-9][0-9][0-9].pdf«"
      return 1
    fi
    
    local out="${prefix}.pdf"
    
    gs -dBATCH -dNOPAUSE \
        -sDEVICE=pdfwrite \
        -sOutputFile="$out" \
        -f "${files[@]}"
}

merge_pdfs() {
  # merges all *_XXXX.pdf files in the current folder to *.pdf and moves
  # the input files into a `merged`-subfolder
  
  local merged_dir="merged"
  mkdir -p -- "$merged_dir"

  local -a all=(*_[0-9][0-9][0-9][0-9].pdf)
  if (( ${#all[@]} == 0 )); then
    echo "No files with suffix _XXXX.pdf found."
    return 0
  fi

  local -A seen
  local -a prefixes
  for f in "${all[@]}"; do
    local p="${f%_[0-9][0-9][0-9][0-9].pdf}"
    if [[ -z ${seen[$p]} ]]; then
      prefixes+=("$p")
      seen[$p]=1
    fi
  done

  local ok=0
  for p in "${prefixes[@]}"; do
    echo "→ Merging file »$p«…"
    if merge_pdf "$p"; then
      mv -- "${p}"_[0-9][0-9][0-9][0-9].pdf "$merged_dir"/
      ok=1
    else
      echo "✖ Unable to merge »$p«."
    fi
  done

  return $(( ok == 1 ? 0 : 1 ))
}


get_hyprland_version() {
    hyprland --version | grep -oP 'Hyprland \K[0-9.]+' 2>/dev/null
}

update() {
    # detects if hyprland was updated during the system-update and
    # if so runs `hyprpm update`
    version_before=$(get_hyprland_version)
    # update system
    paru -Syu
    version_after=$(get_hyprland_version)
    if [[ "$version_before" != "$version_after" ]]; then
        echo "Hyprland was updated: $version_before → $version_after. Running 'hyprpm update'"
        hyprpm update
    else
        echo "Hyprland was not updated ($version_after), no hyprpm update necessary"
    fi
}

